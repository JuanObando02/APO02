import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
	        
	        Scanner leer = new Scanner(System.in);
	        System.out.println("interes:");
	        float n = leer.nextFloat();
	        System.out.println("monto");
	        int x = leer.nextInt();
	        
	        float total = interes(n,x);
	        System.out.println("El tal a pagar es de:"+total);

		}
		
	static public void bienvenido(String nombre, byte numero){
	    
	   	System.out.println("Hola:"+nombre+"\nEres el No:"+numero);
	   	
	}
	
	 static public float interes (float interes,int monto){
	   float total;
	   float inte;
	   inte = monto*(interes/100); 
	   total = monto + inte;
	   return total;
	}
	
}
